<% if @thread.errors.any? %>
	<div class="alert alert-danger alert-thread alert-dismissible">
	<button type="button" class="close" data-dismiss="alert">&times;</button>
		<% @thread.errors.full_messages.each do |error| %>
			<span><li class="li-thread"> <%= error %> </li></span><br>
		<% end %>
	</div>
<% end %>

<%= form_for @thread do |f| %>
	<div class="form-group">
		<%= f.text_field :title, placeholder: "Title", class: 'form-control' %>
	</div>

	<div class="form-group">
		<%= f.text_area :content, rows: 6, placeholder: "Content", class: 'form-control' %>
	</div>

	<div class="text-center">
		<%= f.submit 'Buat', class: 'btn btn-primary' %>
	</div>
<% end %>